<body>
    <div class="container">
        <div id="quizSection">
            <h1>🎲 Quiz for My Baby Farah</h1>
            <div class="progress" id="progress">Question 1 of 5</div>
            <div class="equation" id="equation"></div>
            
            <div class="input-section">
                <input type="number" id="answer" placeholder="Your answer..." step="0.01">
            </div>
            
            <div class="feedback hidden" id="feedback"></div>
            
            <button onclick="checkAnswer()" id="submitBtn">Submit Answer</button>
            <button onclick="nextQuestion()" id="nextBtn" class="hidden">Next Question →</button>
        </div>
        
        <div id="birthdaySection" class="hidden birthday-page">
            <h1>🎉 Happy Birthday My Babe 🎂</h1>
            <div class="score" id="finalScore"></div>
            <div class="message">
                Sorry for forgetting about ur bday im really sorry i love u soo much im reallllyyy happy and fortunate to have u in my life i reallly love u and cant pass a day without talking to u i hope we stay for eachother at hardships and enjoy the cute and beautiful times its been a long journey with u but i enjoyed every second of it and i hope u feel the same too if i can live the same experience again i would do it 1000 times but change the times where i made mistakes that made u feel like u didnt matter to me. 💖
                <br>
                I love u more than u would ever realize cutie i hope u never go away mwa happy birthday 💕
            </div>
            <button onclick="showResponse('aww')">Aww 💖</button>
            <button onclick="showResponse('love')">I love u too 💕</button>
            <button onclick="showResponse('stay')">I hope u never leave too 💝</button>
            <div id="responseMessage" class="hidden" style="margin-top: 20px; font-size: 22px; color: #667eea; font-weight: bold; position: relative; z-index: 1;"></div>
        </div>
    </div>

    <script>
        let equations = [];
        let answers = [];
        let currentQuestion = 0;
        let correctCount = 0;
        
        function getRandomNumber(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }
        
        function getRandomOperator() {
            const operators = ['+', '-', '×', '÷'];
            return operators[Math.floor(Math.random() * operators.length)];
        }
        
        function generateEquations() {
            equations = [];
            answers = [];
            for (let i = 0; i < 5; i++) {
                const operator = getRandomOperator();
                
                let answer;
                let equation;
                switch(operator) {
                    case '+':
                        // Addition: 1-10 + 1-10
                        const add1 = getRandomNumber(1, 10);
                        const add2 = getRandomNumber(1, 10);
                        answer = add1 + add2;
                        equation = `${add1} + ${add2}`;
                        break;
                    case '-':
                        // Subtraction: ensure positive results with numbers 1-10
                        const sub1 = getRandomNumber(5, 10);
                        const sub2 = getRandomNumber(1, sub1);
                        answer = sub1 - sub2;
                        equation = `${sub1} - ${sub2}`;
                        break;
                    case '×':
                        // Multiplication: 1-5 × 1-5
                        const mult1 = getRandomNumber(1, 5);
                        const mult2 = getRandomNumber(1, 5);
                        answer = mult1 * mult2;
                        equation = `${mult1} × ${mult2}`;
                        break;
                    case '÷':
                        // Division: simple numbers 2-5 ÷ 2-5
                        const divisor = getRandomNumber(2, 5);
                        const quotient = getRandomNumber(2, 5);
                        const dividend = divisor * quotient;
                        answer = quotient;
                        equation = `${dividend} ÷ ${divisor}`;
                        break;
                }
                
                equations.push(equation);
                answers.push(answer);
            }
        }
        
        function displayQuestion() {
            document.getElementById('equation').textContent = equations[currentQuestion] + ' = ?';
            document.getElementById('progress').textContent = `Question ${currentQuestion + 1} of 5`;
            document.getElementById('answer').value = '';
            document.getElementById('feedback').classList.add('hidden');
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.classList.remove('hidden');
            submitBtn.disabled = false;
            const nextBtn = document.getElementById('nextBtn');
            nextBtn.classList.add('hidden');
            nextBtn.textContent = 'Next Question →';
            nextBtn.onclick = nextQuestion;
            document.getElementById('answer').focus();
        }
        
        function checkAnswer() {
            const userAnswer = parseFloat(document.getElementById('answer').value);
            const correctAnswer = answers[currentQuestion];
            const feedback = document.getElementById('feedback');
            const submitBtn = document.getElementById('submitBtn');
            
            if (isNaN(userAnswer)) {
                alert('Please enter a number!');
                return;
            }
            
            // Prevent double submission
            if (submitBtn.disabled) {
                return;
            }
            
            submitBtn.disabled = true;
            feedback.classList.remove('hidden');
            submitBtn.classList.add('hidden');
            
            if (Math.abs(userAnswer - correctAnswer) < 0.01) {
                correctCount++;
                if (correctCount === 1) {
                    feedback.textContent = '💖 How smart are u cutie';
                } else if (correctCount === 2) {
                    feedback.textContent = '✨ Wow how can u be this smart while being this cute';
                } else if (correctCount === 3) {
                    feedback.textContent = '😍 Omd ur too smart for me to compete';
                } else if (correctCount === 4) {
                    feedback.textContent = '💝 How did i get such a beautiful and smart girl';
                } else {
                    feedback.textContent = '💖 How smart are u cutie';
                }
                feedback.className = 'feedback correct';
            } else {
                feedback.textContent = '💕 Aww how unlucky u got the next one babe';
                feedback.className = 'feedback incorrect';
            }
            
            // Check if this is the last question (question 5, index 4)
            if (currentQuestion === 4) {
                // Show a submit button instead of next button
                const nextBtn = document.getElementById('nextBtn');
                nextBtn.textContent = 'See Birthday Message 🎉';
                nextBtn.onclick = showBirthdayPage;
                nextBtn.classList.remove('hidden');
            } else {
                document.getElementById('nextBtn').classList.remove('hidden');
            }
        }
        
        function nextQuestion() {
            if (currentQuestion < 4) {
                currentQuestion++;
                displayQuestion();
            }
        }
        
        function newQuiz() {
            currentQuestion = 0;
            correctCount = 0;
            generateEquations();
            document.getElementById('quizSection').classList.remove('hidden');
            document.getElementById('birthdaySection').classList.add('hidden');
            displayQuestion();
        }
        
        function showBirthdayPage() {
            document.getElementById('quizSection').classList.add('hidden');
            document.getElementById('birthdaySection').classList.remove('hidden');
            document.getElementById('finalScore').textContent = `You got ${correctCount} out of 5 correct! 🌟`;
        }
        
        function showResponse(type) {
            const responseMsg = document.getElementById('responseMessage');
            responseMsg.classList.remove('hidden');
            
            if (type === 'aww') {
                responseMsg.textContent = '💖 You make my heart melt cutie! 💖';
            } else if (type === 'love') {
                responseMsg.textContent = '💕 I love u more than anything in this world! 💕';
            } else if (type === 'stay') {
                responseMsg.textContent = '💝 I promise to always be here for u babe! 💝';
            }
        }
        
        // Allow Enter key to submit
        document.getElementById('answer').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                if (!document.getElementById('submitBtn').classList.contains('hidden')) {
                    checkAnswer();
                } else if (!document.getElementById('nextBtn').classList.contains('hidden')) {
                    nextQuestion();
                }
            }
        });
        
        // Initialize quiz on page load
        newQuiz();
    </script>
</body>

</html>
